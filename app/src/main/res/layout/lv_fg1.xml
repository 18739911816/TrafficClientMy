<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/im_brand_fg1Lv"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_carNumber_fg1Lv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textSize="25sp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_number_fg1Lv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textSize="25sp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_pid_fg1Lv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textSize="25sp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_buyDate_fg1Lv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textSize="25sp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_brand_fg1Lv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textSize="25sp"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_CurrentBalance_fg1Lv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_weight="1" />

    <CheckBox
        android:id="@+id/ck_fg1Lv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btn_fg1Lv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="充值"
        android:layout_weight="1" />
</LinearLayout>